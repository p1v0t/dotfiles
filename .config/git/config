; this is also a comment

[core]
	editor = vim
	filemod = false
	autocrlf = input
[user]
	email = admbudk@gmail.com
	name = Adem Budak

[apply]
	whitespace = fix

[color]
	branch = auto
	diff = auto
	status = auto
	ui = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[diff]
	tool = vimdiff

[credential]
	helper = cache
	heper = cache --timeout=3600

[alias]
	l = log --all --graph --oneline --abbrev-commit --decorate
	st = status
	tags = tag -l
	br = branch 
	branches = branch -a
	remotes = remote -v
	diff = diff --word-diff

	get = clone --recursive 
	co = checkout
	uncommit = reset --soft HEAD^
	delcommit = --amend

	contributors = shortlog -e --summary --numbered

	stat = log --stat
	statoneline = log --pretty=oneline
	statwhowhen = log --pretty=format:"%h - %an, %ar : %s"
	statgraph = log --pretty=format:"%h %s" --graph
	

[credential]
	helper = cache
	heper = cache --timeout=3600

[sendemail]
	from = admbudk@gmail.com
	confirm = always

	smtpEncryption = tls
	smtpServer = smtp.gmail.com
	smtpUser = admbudk@gmail.com
	smtpServerPort = 587
