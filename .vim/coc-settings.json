{
"suggest.autoTrigger": "always",
"suggest.triggerAfterInsertEnter": true,
"suggest.timeout": 500,
"suggest.noselect": false,
"suggest.minTriggerInputLength": 3,
"suggest.acceptSuggestionOnCommitCharacter": true,
"suggest.disableMenu": true,
"suggest.maxCompleteItemCount": 100,
"suggest.detailMaxLength": 220,

"diagnostic.enable": true,
"diagnostic.refreshOnInsertMode": true,
"diagnostic.checkCurrentLine": false,
"diagnostic.displayByAle": false,
"diagnostic.locationlist": true,

"diagnostic.enableSign": true,
"diagnostic.hintSign": "🤔",
"diagnostic.warningSign": "⚡",
"diagnostic.errorSign": "🔥",
"diagnostic.infoSign": "🕶️",

"snippets.textmateSnippetsRoots": ["/home/adem/Github/snippets"],

"workspace.ignoredFiletypes": [
	"markdown",
	"log",
	"txt",
	"help"
],

"suggest.completionItemKindLabels": {
		"keyword": "⁘",
		"variable": "⤚",
		"value": "⤙",
		"operator": "∓",
		"function": "⨍",
		"reference": "🙴",
		"constant": "∏",
		"method": "∊",
		"struct": "🆂",
		"class": "🅲",
		"interface": "🅘",
		"text": "✎",
		"enum": "🅔",
		"enumMember": "ⓔ",
		"module": "\uf40d",
		"color": "\ue22b",
		"property": "\ue624",
		"field": "\uf9be",
		"unit": "₺",
		"event": "\ufacd",
		"file": "🗋",
		"folder": "📂",
		"snippet": "🍰",
		"typeParameter": "𝐓",
		"default": "⊜"
},

"coc.preferences.jumpCommand":"vsplit",
"coc.preferences.extensionUpdateCheck": "weekly",
"coc.preferences.snippets.enable": true,
"coc.source.file.ignoreHidden": false,


 "languageserver": {
	 "rustlang": {
		"command":"rls",
               "filetypes": ["rust", "rs"],
		"rootPatterns": ["WORKSPACE", ".git"]
	 },

	"clangd" : {
		"command":"clangd",
		"filetypes": ["c", "cpp"],
		"rootPatterns": ["compile_commands.json", "WORKSPACE",".git"],
		"args": ["--compile-commands-dir=.",
			"--compile_args_from=lsp", // ignores compile_commands.json, alt opt compile_commands
			"--all-scopes-completion",
			"--background-index",
		       	"--completion-parse=always",
		       	"--completion-style=bundled", 
		       	"--function-arg-placeholders",
		       	"--header-insertion=iwyu",
			"--limit-results=0",
		       	"--suggest-missing-includes",
		       	"-j=6",
		       	"--pch-storage=memory",
		       	"--log=error"]
       	},

	 /*
	"ccls" : {
		"command":"ccls",
		"filetypes": ["c", "cpp"],
		"rootPatterns": ["compile_commands.json", "WORKSPACE",".git"],
		"args": ["-v=0"]
	},

	*/
    "serve-d": {
        "command": "serve-d",
		"filetypes":["d"],
		"rootPatterns":[".vim", ".git", "WORKSPACE"]
	},

     "golang": {
      "command": "go-langserver",
	  "args": ["-diagnostics", "-gocodecompletion", "-lint-tool=golint","maxparallelism=8"],
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/","WORKSPACE"],
      "filetypes": ["go"]
    },

    "dart": {
      "command": "dart_language_server",
	  "detached": false,
      "args": [],
      "filetypes": ["dart"],
      "initializationOptions": {},
      "settings": {
        "dart": {
          "validation": {},
          "completion": {}
        }
      }
    },

    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },

	"haskell": {
		"command": "hie-wrapper",
		"args": ["--lsp"],
		"rootPatterns": [
		  ".stack.yaml",
		  "cabal.config",
		  "package.yaml"
		],
		"filetypes": [
		  "hs",
		  "lhs",
		  "haskell"
		],
		"initializationOptions": {
		  "languageServerHaskell": { }
        }
	}

 }
}
