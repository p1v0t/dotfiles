"coc.preferences.jumpCommand": "split",

"coc.preferences.snippets.enable": true,


 "languageserver": {

	"ccls" : {
		"command":"ccls",
		"filetypes": ["c", "cpp"],
		"rootPatterns": ["compile_commands.json", "WORKSPACE",".git"],
		"args": ["-v=0"]
	},

    "serve-d": {
        "command": "serve-d",
		"filetypes":["d"],
		"rootPatterns":[".vim", ".git", "WORKSPACE"]
	},

     "golang": {
      "command": "go-langserver",
	  "args": ["-diagnostics", "-gocodecompletion", "-lint-tool=golint","maxparallelism=8"],
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/","WORKSPACE"],
      "filetypes": ["go"]
    },

    "dart": {
      "command": "dart_language_server",
	  "detached": false,
      "args": [],
      "filetypes": ["dart"],
      "initializationOptions": {},
      "settings": {
        "dart": {
          "validation": {},
          "completion": {}
        }
      }
    },

    "python": {
      "command": "pyls",
      "filetypes": ["py"],
      "rootPatterns": [".git/","WORKSPACE"]
    },


    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },

	"haskell": {
		"command": "hie-wrapper",
		"rootPatterns": [
		  ".stack.yaml",
		  "cabal.config",
		  "package.yaml"
		],
		"filetypes": [
		  "hs",
		  "lhs",
		  "haskell"
		],
		"initializationOptions": {
		  "languageServerHaskell": { }
        }
	}

 }
}
