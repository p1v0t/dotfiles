{
"suggest.autoTrigger": "always",
"suggest.snippetIndicator": "‚úà",
"suggest.triggerAfterInsertEnter": true,
"suggest.timeout": 500,
"suggest.noselect": false,
"suggest.minTriggerInputLength": 3,
"suggest.acceptSuggestionOnCommitCharacter": true,
"suggest.disableMenu": true,
"suggest.maxCompleteItemCount": 100,
"suggest.detailMaxLength": 120,

"diagnostic.enable": true,
"diagnostic.refreshOnInsertMode": true,
"diagnostic.checkCurrentLine": false,
"diagnostic.displayByAle": false,

"diagnostic.enableSign": true,
"diagnostic.hintSign": "ü§î",
"diagnostic.warningSign": "‚ö°",
"diagnostic.errorSign": "üî•",
"diagnostic.infoSign": "üï∂Ô∏è",

"workspace.ignoredFiletypes": [
	"markdown",
	"log",
	"txt",
	"help"
],

"coc.preferences.jumpCommand": "tab drop",

"coc.preferences.snippets.enable": true,


 "languageserver": {

	"ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/", "WORKSPACE"],
      "initializationOptions": {
         "cache": {
           "directory": "/tmp/ccls"
         }
       }
    },

    "serve-d": {
        "command": "serve-d",
		"filetypes":["d"],
		"rootPatterns":[".vim", ".git", "WORKSPACE"]
	},

     "golang": {
      "command": "go-langserver",
	  "args": ["-diagnostics", "-gocodecompletion", "-lint-tool=golint","maxparallelism=8"],
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/","WORKSPACE"],
      "filetypes": ["go"]
    },

    "dart": {
      "command": "dart_language_server",
	  "detached": false,
      "args": [],
      "filetypes": ["dart"],
      "initializationOptions": {},
      "settings": {
        "dart": {
          "validation": {},
          "completion": {}
        }
      }
    },

    "python": {
      "command": "pyls",
      "filetypes": ["py"],
      "rootPatterns": [".git/","WORKSPACE"]
    },

    "cmake": {
      "command": "cmake",
	  "args": ["-E", "server","--experimental"],
      "filetypes": ["cmake"],
      "rootPatterns": [".git/","WORKSPACE"]
    },

    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  }
}
