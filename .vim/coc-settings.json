{
    "suggest.autoTrigger": "always",
    "suggest.triggerAfterInsertEnter": true,
    "suggest.timeout": 500,
    "suggest.noselect": false,
    "suggest.minTriggerInputLength": 3,
    "suggest.acceptSuggestionOnCommitCharacter": true,
    "suggest.disableMenu": true,
    "suggest.maxCompleteItemCount": 100,
    "suggest.detailMaxLength": 220,

    "diagnostic.enable": true,
    "diagnostic.refreshOnInsertMode": true,
    "diagnostic.checkCurrentLine": false,
    "diagnostic.displayByAle": false,
    "diagnostic.locationlist": true,

    "diagnostic.enableSign": true,
    "diagnostic.hintSign": "🤔",
    "diagnostic.warningSign": "⚡",
    "diagnostic.errorSign": "🔥",
    "diagnostic.infoSign": "🕶️",

    "snippets.textmateSnippetsRoots": ["/home/adem/.config/snippets"],

    "workspace.ignoredFiletypes": [
        "markdown",
        "log",
        "txt",
        "help"
    ],

    "suggest.completionItemKindLabels": {
        "keyword": "⁘",
        "variable": "⤚",
        "value": "⤙",
        "operator": "∓",
        "function": "⨍",
        "reference": "＆",
        "constant": "∏",
        "method": "∈",
        "struct": "🆂",
        "class": "🅲",
        "interface": "🅘",
        "text": "✎",
        "enum": "🅔",
        "enumMember": "ⓔ",
        "module": "🅼",
        "color": "\ue22b",
        "property": "ₛ",
        "field": "∊",
        "unit": "₺",
        "event": "🔌",
        "file": "🗋",
        "folder": "📂",
        "snippet": "🍰",
        "typeParameter": "𝐓",
        "default": "⊜"
    },

    "coc.preferences.jumpCommand": "vsplit",
    "coc.preferences.extensionUpdateCheck": "weekly",
    "coc.preferences.snippets.enable": true,
	"coc.preferences.bracketEnterImprove": true,
	"coc.preferences.rootPatterns": [
		".git",
		"CMakeLists.txt",
		"packages.json"
	],
    "coc.source.file.ignoreHidden": false,


    "languageserver": {
        "rustlang": {
            "command": "rls",
            "filetypes": ["rust", "rs"],
            "rootPatterns": ["WORKSPACE", ".git"]
        },

   "javscript-typescript": {
            "command": "javascript-typescript-stdio",
            "filetypes": ["javascript", "javascriptreact"],
            "initializationOptions": {},
            "requireRootPattern": true,
            "settings": {},
            "rootPatterns": ["package.json", "node_modules"]
        },

        "clangd": {
            "command": "clangd",
            "filetypes": ["c", "cpp"],
            "rootPatterns": ["compile_commands.json", 
				"WORKSPACE",
			   	".git"],

            "args": ["--compile-commands-dir=build",
                "--query-driver=/opt/clang+llvm-10.0.0/**/clang-*",
                "--all-scopes-completion",
                "--header-insertion=never",
				"--clang-tidy",
                "--clang-tidy-checks= -* bugprone-*",
                "--background-index",
                "--completion-parse=always",
                "--completion-style=bundled",
                "--function-arg-placeholders",
                "--header-insertion-decorators",
				"--suggest-missing-includes",
                "--limit-results=0",
                "-j=6",
                "--pch-storage=memory",
                "--log=verbose",
                "--pretty"
            ]
        },

        "serve-d": {
            "command": "serve-d",
            "filetypes": ["d"],
            "rootPatterns": [".vim", ".git", "WORKSPACE"]
        },

        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod"],
            "filetypes": ["go"]
        },
        "dart": {
            "command": "dart_language_server",
            "detached": false,
            "args": [],
            "filetypes": ["dart"],
            "initializationOptions": {},
            "settings": {
                "dart": {
                    "validation": {},
                    "completion": {}
                }
            }
        },

        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        },

        "haskell": {
            "command": "hie-wrapper",
            "args": ["--lsp"],
            "rootPatterns": [
                ".stack.yaml",
                "cabal.config",
                "package.yaml"
            ],
            "filetypes": [
                "hs",
                "lhs",
                "haskell"
            ],
            "initializationOptions": {
                "languageServerHaskell": {}
            }
        }

    }
}